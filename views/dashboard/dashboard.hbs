<li class="main-header__item">
    <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type="submit">Logout</button>
    </form>
</li>
<li class="main-header__item">
    <a class="active" href="/dashboard/create-post">Create Post
    </a>
</li>

<main>
    <form action="/dashboard/search" method="GET">
        <div>
            <input aria-label="Search" id="search" type="text" name="user" placeholder="Search">
        </div>
        <button type="submit">Search</button>
        <div style="position: relative; width: 100%; top: -1px;">
            <div class="border" id="search-results"></div>
        </div>
    </form>
    <ul>
        {{#if errorMessage }}
            <div class="user-message user-message--error">{{errorMessage}}</div>
        {{/if}}
        {{#each posts}}
            <li>
                <span>{{user.username}}</span><br/>
                <a href="/dashboard/get-post/{{_id}}">{{post}}</a><span> {{ts}}</span><span>
                    <form action="/dashboard/{{_id}}/like-post" method="POST">
                        <input type="hidden" name="_csrf" value="{{../csrfToken}}"/>
                        <input type="hidden" name="postId" value="{{_id}}"/>
                        <button class="btn" type="submit">Like {{likes}}</button>
                    </form>
                </span>
                <form action="/dashboard/delete-post" method="POST">
                    <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                    <input type="hidden" value="{{_id}}" name="postId">
                    <button class="btn danger" type="submit">Delete</button>
                </form>
            </li>
        {{/each}}
    </ul>
</main>